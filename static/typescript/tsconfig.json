{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2015"
  },
  "include": ["./**/*.ts"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
